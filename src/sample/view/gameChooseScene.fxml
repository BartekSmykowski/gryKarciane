            <HBox alignment="CENTER" layoutX="5.0" layoutY="14.0" prefHeight="55.0" prefWidth="198.0" spacing="30.0">
               <children>
                      <Label text="Typ gry:" />
                      <ChoiceBox fx:id="gameChoiceBox" value="Tysiąc">
